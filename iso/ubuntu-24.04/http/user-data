#cloud-config
autoinstall:
  version: 1
  interactive: false
  
  locale: es_ES.UTF-8
  keyboard:
    layout: es
  timezone: Europe/Madrid
  
  network:
    version: 2
    ethernets:
      en:
        match:
          name: "en*"
        dhcp4: true
      eth:
        match:
          name: "eth*"
        dhcp4: true
        
  storage:
    layout:
      name: direct

  identity:
    hostname: ubuntu
    username: vagrant
    password: '$6$lkmFH8Iy3/2cKmS/$jaZRR01TqhRCZ6p05U99ZY5LZbb88qROb1PML4fvNuxwXRvkssJ8uyGysG8n8MSAZZ1LjIYw8E3TTI8i2vlsW0'

  ssh:
    install-server: true
    allow-pw: true
  
  packages:
    - openssh-server
    - sudo
    - whois

  early-commands:
    - systemctl stop ssh.socket
    - systemctl stop ssh.service
    
  late-commands:
    - echo "PermitRootLogin yes" >> /target/etc/ssh/sshd_config
    - sed -i 's/^.*PasswordAuthentication.*/PasswordAuthentication yes/g' /target/etc/ssh/sshd_config
    - sed -i 's/^.*PubkeyAuthentication.*/PubkeyAuthentication yes/g' /target/etc/ssh/sshd_config
    - echo "root:vagrant" | chroot /target chpasswd
    - echo "vagrant ALL=(ALL) NOPASSWD:ALL" > /target/etc/sudoers.d/vagrant
    - chmod 0440 /target/etc/sudoers.d/vagrant
    - echo "Installation complete."
